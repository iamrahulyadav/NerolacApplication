<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.abc.nerolac.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:weightSum="2"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:weightSum="5"
                    android:layout_height="0dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="3.8"
                        android:layout_height="0dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_marginRight="70dp"
                                android:layout_width="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/logo_1"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/enterLoginDetails"
                            android:textColor="#323232"
                            android:layout_marginLeft="85dp"
                            android:textSize="18sp"
                            android:text="Enter Login Credential"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1.2"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:layout_height="0dp">

                        <EditText
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:id="@+id/uname"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:paddingLeft="20dp"
                            android:hint="Username"
                            android:textColorHint="#b1b1b1"
                            android:textColor="#000"
                            android:background="@drawable/username_box"
                            android:layout_height="55dp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1.2"
                        android:orientation="vertical"
                        android:padding="14dp"
                        android:layout_height="0dp">

                        <EditText
                            android:singleLine="true"
                            android:imeOptions="actionDone"
                            android:maxLength="6"
                            android:inputType="textPassword"
                            android:id="@+id/upassword"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:paddingLeft="20dp"
                            android:textColor="#000"
                            android:hint="Password"
                            android:textColorHint="#b1b1b1"
                            android:background="@drawable/username_box"
                            android:layout_height="55dp" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/buttonLogin"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="86dp"
                            android:paddingLeft="20dp"
                            android:textColor="#fff"
                            android:gravity="center_vertical|left"
                            android:text="Login"
                            android:textAllCaps="false"
                            android:background="@android:color/black"
                            android:layout_height="50dp"
                            android:textSize="20sp" />

                    </LinearLayout>



                    <TextView
                        android:layout_weight="0.01"
                        android:layout_marginTop="25dp"
                        android:id="@+id/textRegister"
                        android:textColor="#323232"
                        android:layout_marginLeft="85dp"
                        android:textSize="18sp"
                        android:text="Don't have account? Register now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginLeft="249dp"
                        android:layout_width="108dp"
                        android:background="#ed1248"
                        android:layout_height="1dp">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_weight="0.1"
                                android:id="@+id/textForgotPassword"
                                android:textColor="#323232"
                                android:layout_marginLeft="85dp"
                                android:textSize="18sp"
                                android:text="Forgot password?"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_marginLeft="85dp"
                                android:layout_width="145dp"
                                android:background="#00abbf"
                                android:layout_height="1dp">

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="60dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_weight="0.1"
                                android:id="@+id/knowAboutKnowledgeManagement"
                                android:textColor="#323232"
                                android:layout_marginLeft="85dp"
                                android:textSize="18sp"
                                android:text="About Knowledge Management"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_marginLeft="85dp"
                                android:layout_width="253dp"
                                android:background="#00abbf"
                                android:layout_height="1dp">

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1.3"
                        android:layout_height="wrap_content">
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/nerolac_register"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_alignParentBottom="true"
        android:src="@drawable/footer_blob"
        android:layout_width="wrap_content"
        android:layout_height="80dp" />

</RelativeLayout>
