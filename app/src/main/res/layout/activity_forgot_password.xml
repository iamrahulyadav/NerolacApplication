<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.abc.nerolac.activity.ForgotPasswordActivity">

    <EditText
        android:id="@+id/editEmailId"
        android:textColor="#ffffff"
        android:hint="Enter Emai Id"
        android:textSize="30dp"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:background="#000000"
        android:layout_marginTop="10dp"
        android:id="@+id/spinnerSecurityQuestion"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/editSeucrityQuestionAnswer"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:hint="Enter Security Question Answer"
        android:textSize="30dp"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button

        android:id="@+id/getPassword"
        android:layout_marginTop="10dp"
        android:text="Get Password"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:background="#000000"
        android:text="Password"
        android:textColor="#ffffff"
        android:id="@+id/textSetPassword"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
